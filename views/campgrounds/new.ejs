<% layout('layouts/boilerplate') %>
<div class="row">
  <h1 class="text-center">キャンプ場の新規登録</h1>
  <div class="offset-3 col-6">
    <form action="/campgrounds" method="POST" class="validated-form" novalidate>
      <div class="mb-3">
        <label class="form-lavel" for="title">タイトル</label>
        <input class="form-control" type="text" name="campground[title]" id="title" required />
        <div class="valid-feedback">OK!</div>
      </div>
      <div class="mb-3">
        <label class="form-lavel" for="location">場所</label>
        <input
          class="form-control"
          type="text"
          name="campground[location]"
          id="location"
          required
        />
        <div class="valid-feedback">OK!</div>
      </div>
      <div class="mb-3">
        <label class="form-lavel" for="image">画像URL</label>
        <input class="form-control" type="text" name="campground[image]" id="image" required />
        <div class="valid-feedback">OK!</div>
      </div>
      <div class="mb-3">
        <label class="form-lavel" for="price">価格</label>
        <div class="input-group mb-3">
          <span class="input-group-text" id="price-label">$</span>
          <input
            id="price"
            name="campground[price]"
            type="text"
            class="form-control"
            placeholder="0"
            aria-label="価格"
            aria-describedby="price-label"
            required
          />
          <div class="valid-feedback">OK!</div>
        </div>
      </div>
      <div class="mb-3">
        <label class="form-lavel" for="description">説明</label>
        <textarea
          class="form-control"
          type="text"
          name="campground[description]"
          id="description"
          required
        ></textarea>
        <div class="valid-feedback">OK!</div>
      </div>
      <div class="mb-3">
        <button class="btn btn-success">登録する</button>
      </div>
    </form>
    <a href="/campgrounds">戻る</a>
  </div>
</div>
